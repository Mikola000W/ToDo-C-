@model TodoViewModel

<div class="row justify-content-center">
	<div class="col-xl-6 col-md-8 col-sn-10">
		<table class="table">
			<thead>
				<tr class="table-primary">
					<th scope="col">Id</th>
					<th scope="col">Name</th>
					<th scope="col"></th>

				</tr>



			</thead>
			<tbody>
				@foreach (var t in Model.TodoList)
				{
					<tr>
						<th class="todos-colums" scope="row">@t.Id</th>
						<td class="todos-colums">@t.Name</td>
						<td class="button-column">
							<input type="submit" class="btn btn-danger" value="Delete" onclick="deleteTodo(@t.Id)"/>
							<input type="submit" class="btn btn-primary" value="Update" onclick="populateForm(@t.Id)"/>

						</td>



					</tr>
				}

			</tbody>

		</table>



	</div>



</div>